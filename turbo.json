{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "out/**"
      ],
      "env": ["DATABASE_URL", "RICE_SHOWER_URL", "HEATER_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lab:laptop": {
      "cache": false,
      "persistent": true
    },
    "lab:pi": {
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "cache": false
    }
  }
}
