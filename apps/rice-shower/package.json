{
  "name": "rice-shower",
  "version": "0.1.0",
  "private": true,
  "description": "Data Collector for lgg-api, part of Low Temperature Capstone Project",
  "type": "module",
  "scripts": {
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile out/server src/index.ts",
    "dev": "bun --env-file=.env.dev --watch --no-clear-screen src/index.ts",
    "lab:laptop": "dotenv -e .env.lab -v NODE_ENV=production -- out/server",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.14",
    "@elysiajs/opentelemetry": "^1.4.10",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.211.0",
    "@opentelemetry/sdk-trace-node": "^2.5.0",
    "@repo/api-client": "workspace:*",
    "@repo/config": "workspace:*",
    "@repo/tsdb": "workspace:*",
    "@types/bun": "^1.3.6",
    "dotenv-cli": "^11.0.0",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "eslint": "^9.39.2",
    "openapi-fetch": "^0.15.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  }
}
