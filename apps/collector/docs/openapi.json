{
  "openapi": "3.0.3",
  "info": {
    "title": "Rice Shower (LT Capstone)",
    "description": "API Web Server that scrape Lakeshore Metrics and save it to time-series database, then allow user to query the data.",
    "version": "0.1.0"
  },
  "paths": {
    "/query/{instance_name}": {
      "get": {
        "tags": [
          "Query"
        ],
        "operationId": "getMetrics",
        "summary": "Get Metrics",
        "description": "Query metrics data from time series database",
        "parameters": [
          {
            "name": "instance_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "channels",
            "in": "query",
            "required": true,
            "schema": {
              "description": "List of channel numbers to retrieve",
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          },
          {
            "name": "time_start",
            "in": "query",
            "required": true,
            "schema": {
              "description": "Start time for the query in ISO format",
              "anyOf": [
                {
                  "description": "Start time for the query in ISO format",
                  "type": "Date"
                },
                {
                  "format": "date-time",
                  "type": "string"
                },
                {
                  "format": "date",
                  "type": "string"
                },
                {
                  "type": "number"
                }
              ]
            }
          },
          {
            "name": "time_end",
            "in": "query",
            "required": true,
            "schema": {
              "description": "End time for the query in ISO format",
              "anyOf": [
                {
                  "description": "End time for the query in ISO format",
                  "type": "Date"
                },
                {
                  "format": "date-time",
                  "type": "string"
                },
                {
                  "format": "date",
                  "type": "string"
                },
                {
                  "type": "number"
                }
              ]
            }
          },
          {
            "name": "interval",
            "in": "query",
            "required": true,
            "schema": {
              "description": "Interval in seconds for time bucketing",
              "default": 10,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Response for status 200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "dataPoints": {
                      "description": "Total number of data points returned",
                      "type": "number"
                    },
                    "metrics": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "time": {
                            "description": "Timestamp of the metric",
                            "format": "date-time",
                            "type": "string"
                          },
                          "channels": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "channel": {
                                  "description": "Channel number",
                                  "type": "number"
                                },
                                "kelvin": {
                                  "description": "Temperature in Kelvin",
                                  "type": "number"
                                },
                                "resistance": {
                                  "description": "Resistance in Ohms",
                                  "type": "number"
                                }
                              },
                              "required": [
                                "channel",
                                "kelvin",
                                "resistance"
                              ]
                            }
                          }
                        },
                        "required": [
                          "time",
                          "channels"
                        ]
                      }
                    }
                  },
                  "required": [
                    "dataPoints",
                    "metrics"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Response for status 500",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/scrape/metrics": {
      "get": {
        "tags": [
          "Scrape"
        ],
        "operationId": "getScrapeMetrics",
        "summary": "Get Scrape Metrics",
        "description": "Retrieve metrics about the scraping process, including last error time, error counts per channel, and total successful scrapes",
        "responses": {
          "200": {
            "description": "Response for status 200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "lastError": {
                      "nullable": true,
                      "anyOf": [
                        {
                          "description": "Timestamp of the last error, or null if no errors have occurred",
                          "format": "date-time",
                          "type": "string"
                        },
                        {
                          "type": "null"
                        }
                      ]
                    },
                    "errorCount": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "channel": {
                            "description": "Channel number",
                            "type": "number"
                          },
                          "count": {
                            "description": "Number of errors for this channel",
                            "type": "number"
                          }
                        },
                        "required": [
                          "channel",
                          "count"
                        ]
                      }
                    },
                    "successCount": {
                      "description": "Total number of successful scrapes",
                      "type": "number"
                    }
                  },
                  "required": [
                    "lastError",
                    "errorCount",
                    "successCount"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}