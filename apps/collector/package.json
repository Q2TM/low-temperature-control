{
  "name": "rice-shower",
  "version": "0.1.0",
  "private": true,
  "description": "Data Collector for lgg-api, part of Low Temperature Capstone Project",
  "type": "module",
  "scripts": {
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile out/server src/index.ts",
    "dev": "bun --watch --no-clear-screen src/index.ts",
    "preview": "dotenv -v NODE_ENV=production -- out/server",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@elysiajs/openapi": "^1.4.11",
    "@leomotors/config": "^1.0.1",
    "@repo/api-client": "workspace:*",
    "@repo/config": "workspace:*",
    "@repo/tsdb": "workspace:*",
    "@types/bun": "^1.2.23",
    "@types/node": "^22.18.8",
    "dotenv-cli": "^10.0.0",
    "drizzle-orm": "^0.44.6",
    "elysia": "^1.4.9",
    "eslint": "^9.37.0",
    "tsup": "^8.5.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
