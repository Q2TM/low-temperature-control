    "@repo/tsdb": "workspace:*",
    "@repo/ui": "workspace:*",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query": "^5.90.8",
    "drizzle-orm": "^0.44.7",
    "geist": "^1.5.1",
    "lucide-react": "^0.553.0",
    "next": "16.0.3",
    "next-themes": "^0.4.6",
    "openapi-fetch": "^0.15.0",
    "openapi-react-query": "^0.5.1",
    "postcss": "^8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "2.15.4",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@repo/ui": "workspace:*",
    "@types/node": "^24.10.1",
