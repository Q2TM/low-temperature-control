{
  "name": "low-temperature-control",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build --continue=dependencies-successful",
    "dev": "turbo run dev",
    "lint": "turbo run lint --continue && prettier --check *.js",
    "format": "turbo run format --continue && prettier --write *.js",
    "check-types": "turbo run check-types",
    "codegen": "turbo run codegen",
    "lab:laptop": "turbo run lab:laptop",
    "lab:pi": "turbo run lab:pi"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@types/node": "^24.10.1",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": "^24.11"
  }
}
